{% comment %}
  Theme Showcase Content Snippet
  Simplified version of the theme showcase for use in layouts
{% endcomment %}

<div class="theme-showcase-content">
  <div class="theme-showcase-hero">
    <h1 class="theme-showcase-hero__title">
      {{ block.settings.heading | default: 'Project-Dream Theme' }}
    </h1>
    <p class="theme-showcase-hero__subtitle">
      {{ block.settings.description | default: 'The Ultimate Shopify Theme for Dropshipping Success' }}
    </p>
    
    <div class="theme-showcase-hero__actions">
      <a href="/collections/all" class="btn btn--primary">
        Get Started Today
      </a>
      <a href="#features" class="btn btn--secondary">
        Explore Features
      </a>
    </div>
  </div>

  <div class="theme-showcase-features" id="features">
    <div class="feature-grid">
      <div class="feature-card">
        <div class="feature-card__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <h3 class="feature-card__title">Mobile-First Design</h3>
        <p class="feature-card__description">Optimized for mobile conversions from social media traffic</p>
      </div>

      <div class="feature-card">
        <div class="feature-card__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <h3 class="feature-card__title">Conversion Focused</h3>
        <p class="feature-card__description">Built-in urgency timers, sticky cart, and trust badges</p>
      </div>

      <div class="feature-card">
        <div class="feature-card__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
          </svg>
        </div>
        <h3 class="feature-card__title">8 Color Schemes</h3>
        <p class="feature-card__description">Professional color palettes that adapt automatically</p>
      </div>

      <div class="feature-card">
        <div class="feature-card__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="feature-card__title">Font Pairings</h3>
        <p class="feature-card__description">Curated typography combinations for brand consistency</p>
      </div>
    </div>
  </div>

  <div class="theme-showcase-cta">
    <h2 class="cta__title">Ready to Launch Your Dream Store?</h2>
    <p class="cta__subtitle">Join thousands of successful dropshippers using Project-Dream</p>
    <a href="/collections/all" class="btn btn--accent btn--large">
      Start Building Now
    </a>
  </div>
</div>

<style>
  .theme-showcase-content {
    width: 100%;
  }

  .theme-showcase-hero {
    text-align: center;
    padding: var(--space-2xl) 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    color: white;
    border-radius: var(--border-radius-lg);
    margin-bottom: var(--space-2xl);
  }

  .theme-showcase-hero__title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-md);
  }

  .theme-showcase-hero__subtitle {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-xl);
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .theme-showcase-hero__actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .theme-showcase-features {
    margin-bottom: var(--space-2xl);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
  }

  .feature-card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
    text-align: center;
    transition: all var(--transition-fast);
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .feature-card__icon {
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-md);
  }

  .feature-card__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .feature-card__description {
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .theme-showcase-cta {
    text-align: center;
    padding: var(--space-2xl);
    background: var(--color-background-secondary);
    border-radius: var(--border-radius-lg);
  }

  .cta__title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .cta__subtitle {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .btn {
    display: inline-block;
    padding: var(--space-md) var(--space-lg);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-fast);
    border: none;
    cursor: pointer;
  }

  .btn--primary {
    background: white;
    color: var(--color-primary);
  }

  .btn--secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn--accent {
    background: var(--color-accent);
    color: white;
  }

  .btn--large {
    padding: var(--space-lg) var(--space-xl);
    font-size: var(--font-size-lg);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .theme-showcase-hero {
      padding: var(--space-xl) var(--space-md);
    }

    .theme-showcase-hero__title {
      font-size: var(--font-size-2xl);
    }

    .theme-showcase-hero__subtitle {
      font-size: var(--font-size-base);
    }

    .theme-showcase-hero__actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }

    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
{% comment %}
  Homepage Layout Switcher Snippet
  Compact version for use in sidebars
{% endcomment %}

<div class="homepage-switcher" data-homepage-switcher>
  <div class="homepage-switcher__header">
    <h3 class="homepage-switcher__title">Homepage Layout</h3>
    <p class="homepage-switcher__subtitle">Choose your homepage style</p>
  </div>
  
  <div class="homepage-switcher__options">
    <button 
      class="homepage-switcher__option homepage-switcher__option--active"
      data-layout="single-product"
    >
      <div class="homepage-switcher__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2"/>
          <rect x="6" y="6" width="12" height="8" rx="1"/>
          <line x1="6" y1="16" x2="10" y2="16"/>
          <line x1="6" y1="18" x2="8" y2="18"/>
        </svg>
      </div>
      <div class="homepage-switcher__content">
        <span class="homepage-switcher__name">Single Product</span>
        <span class="homepage-switcher__desc">Hero product focus</span>
      </div>
    </button>

    <button 
      class="homepage-switcher__option"
      data-layout="multi-product"
    >
      <div class="homepage-switcher__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="7" height="7" rx="1"/>
          <rect x="14" y="3" width="7" height="7" rx="1"/>
          <rect x="3" y="14" width="7" height="7" rx="1"/>
          <rect x="14" y="14" width="7" height="7" rx="1"/>
        </svg>
      </div>
      <div class="homepage-switcher__content">
        <span class="homepage-switcher__name">Multi Product</span>
        <span class="homepage-switcher__desc">Product collections</span>
      </div>
    </button>
  </div>

  <div class="homepage-switcher__actions">
    <button class="homepage-switcher__preview-btn" data-preview-btn>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
        <circle cx="12" cy="12" r="3"/>
      </svg>
      Preview
    </button>
    <button class="homepage-switcher__apply-btn" data-apply-btn>
      Apply Layout
    </button>
  </div>
</div>

<style>
  .homepage-switcher {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
  }

  .homepage-switcher__header {
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .homepage-switcher__title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: 4px;
  }

  .homepage-switcher__subtitle {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .homepage-switcher__options {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .homepage-switcher__option {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm);
    background: var(--color-background-secondary);
    border: 2px solid transparent;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: all var(--transition-fast);
    text-align: left;
    width: 100%;
  }

  .homepage-switcher__option:hover {
    border-color: var(--color-primary);
  }

  .homepage-switcher__option--active {
    border-color: var(--color-primary);
    background: var(--color-primary);
    color: white;
  }

  .homepage-switcher__option--active .homepage-switcher__icon,
  .homepage-switcher__option--active .homepage-switcher__name,
  .homepage-switcher__option--active .homepage-switcher__desc {
    color: white;
  }

  .homepage-switcher__icon {
    flex-shrink: 0;
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }

  .homepage-switcher__content {
    flex: 1;
  }

  .homepage-switcher__name {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-foreground);
    margin-bottom: 2px;
    transition: color var(--transition-fast);
  }

  .homepage-switcher__desc {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .homepage-switcher__actions {
    display: flex;
    gap: var(--space-sm);
  }

  .homepage-switcher__preview-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: var(--space-sm);
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    color: var(--color-foreground);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .homepage-switcher__preview-btn:hover {
    background: var(--color-border);
  }

  .homepage-switcher__apply-btn {
    flex: 2;
    padding: var(--space-sm);
    background: var(--color-accent);
    border: none;
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: white;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .homepage-switcher__apply-btn:hover {
    background: var(--color-primary);
    transform: translateY(-1px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const switcher = document.querySelector('[data-homepage-switcher]');
    
    if (switcher) {
      const options = switcher.querySelectorAll('.homepage-switcher__option');
      const previewBtn = switcher.querySelector('[data-preview-btn]');
      const applyBtn = switcher.querySelector('[data-apply-btn]');
      
      // Handle option selection
      options.forEach(option => {
        option.addEventListener('click', function() {
          options.forEach(opt => opt.classList.remove('homepage-switcher__option--active'));
          this.classList.add('homepage-switcher__option--active');
        });
      });
      
      // Handle preview
      if (previewBtn) {
        previewBtn.addEventListener('click', function() {
          const activeOption = switcher.querySelector('.homepage-switcher__option--active');
          const layout = activeOption?.dataset.layout;
          
          if (layout) {
            const baseUrl = window.location.origin;
            const previewUrl = layout === 'single-product' 
              ? `${baseUrl}/?view=index.single-product`
              : `${baseUrl}/?view=index.multi-product`;
            
            window.open(previewUrl, '_blank');
          }
        });
      }
      
      // Handle apply
      if (applyBtn) {
        applyBtn.addEventListener('click', function() {
          const activeOption = switcher.querySelector('.homepage-switcher__option--active');
          const layout = activeOption?.dataset.layout;
          
          if (layout) {
            // Store preference
            localStorage.setItem('preferred_homepage_layout', layout);
            
            // Show confirmation
            const originalText = this.textContent;
            this.textContent = 'Applied!';
            this.style.background = 'var(--color-success)';
            
            setTimeout(() => {
              this.textContent = originalText;
              this.style.background = '';
            }, 2000);
            
            // Redirect to appropriate template
            const redirectUrl = layout === 'single-product' 
              ? '/?view=index.single-product'
              : '/?view=index.multi-product';
            
            setTimeout(() => {
              window.location.href = redirectUrl;
            }, 1000);
          }
        });
      }
    }
  });
</script>
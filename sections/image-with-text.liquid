<div class="image-with-text image-with-text--{{ section.settings.layout }}">
  <div class="image-with-text__wrapper">
    <div class="image-with-text__media">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | img_url: '1024x' }}"
          srcset="{{ section.settings.image | img_url: '375x' }} 375w,
                  {{ section.settings.image | img_url: '750x' }} 750w,
                  {{ section.settings.image | img_url: '1024x' }} 1024w"
          sizes="(min-width: 768px) 50vw, 100vw"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="image-with-text__image"
        >
      {%- else -%}
        <div class="image-with-text__placeholder">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {%- endif -%}
    </div>
    
    <div class="image-with-text__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="image-with-text__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <div class="image-with-text__text">{{ section.settings.text }}</div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Image position",
      "options": [
        {
          "value": "image-left",
          "label": "Image on left"
        },
        {
          "value": "image-right",
          "label": "Image on right"
        }
      ],
      "default": "image-left"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feature Highlight"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.image-with-text {
  padding: var(--mobile-section-padding) 0;
}

.image-with-text__wrapper {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  align-items: center;
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 var(--page-margin);
}

.image-with-text__media {
  position: relative;
  overflow: hidden;
  border-radius: var(--card-border-radius);
}

.image-with-text__image {
  width: 100%;
  height: auto;
  display: block;
}

.image-with-text__placeholder {
  aspect-ratio: 1/1;
  background-color: var(--color-media-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-with-text__placeholder svg {
  width: 50%;
  height: 50%;
}

.image-with-text__content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.image-with-text__heading {
  margin: 0;
}

.image-with-text__text {
  color: var(--color-secondary);
}

.image-with-text__text p {
  margin-bottom: 0.5rem;
}

.image-with-text__text p:last-child {
  margin-bottom: 0;
}

/* Tablet and Desktop Layout */
@media (min-width: 768px) {
  .image-with-text {
    padding: var(--desktop-section-padding) 0;
  }
  
  .image-with-text__wrapper {
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  .image-with-text--image-right .image-with-text__media {
    order: 2;
  }
  
  .image-with-text--image-right .image-with-text__content {
    order: 1;
  }
}

/* Large Desktop */
@media (min-width: 1200px) {
  .image-with-text__wrapper {
    gap: 6rem;
  }
  
  .image-with-text__content {
    gap: 1.5rem;
  }
}
{% endstylesheet %}
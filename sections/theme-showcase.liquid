      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title">{{ section.settings.hero_title | default: 'Project-Dream Theme' }}</h1>
          <p class="hero-subtitle">{{ section.settings.hero_subtitle | default: 'The Ultimate Shopify Theme Engineered for Mobile-First Dropshipping Success' }}</p>

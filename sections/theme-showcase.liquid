{% javascript %}
  class ThemeShowcase extends HTMLElement {
    constructor() {
      super();
      this.colorDemoBtn = this.querySelector('[data-color-demo]');
      this.fontDemoBtn = this.querySelector('[data-font-demo]');
      this.schemeButtons = this.querySelectorAll('[data-apply-scheme]');
      this.fontButtons = this.querySelectorAll('[data-apply-font]');
      this.currentScheme = 'ocean-breeze';
      
      this.init();
    }

    init() {
      this.setupColorDemo();
      this.setupFontDemo();
      this.setupSchemeButtons();
      this.setupFontButtons();
      this.setupColorSwatches();
    }

    setupColorDemo() {
      if (this.colorDemoBtn) {
        this.colorDemoBtn.addEventListener('click', () => {
          this.scrollToSection('colors');
        });
      }
    }

    setupFontDemo() {
      if (this.fontDemoBtn) {
        this.fontDemoBtn.addEventListener('click', () => {
          this.scrollToSection('fonts');
        });
      }
    }

    setupSchemeButtons() {
      this.schemeButtons.forEach(button => {
        button.addEventListener('click', () => {
          const scheme = button.dataset.applyScheme;
          this.applyColorScheme(scheme);
        });
      });
    }

    setupFontButtons() {
      this.fontButtons.forEach(button => {
        button.addEventListener('click', () => {
          const pairing = button.dataset.applyFont;
          this.applyFontPairing(pairing);
        });
      });
    }

    setupColorSwatches() {
      // Define color values for each scheme
      const schemes = {
        'modern-minimalist': {
          primary: '#000000',
          secondary: '#666666',
          accent: '#0066cc',
          background: '#ffffff'
        },
        'bold-contrast': {
          primary: '#000000',
          secondary: '#333333',
          accent: '#0066ff',
          background: '#ffffff'
        },
        'warm-earth': {
          primary: '#8b4513',
          secondary: '#a0522d',
          accent: '#ff6b35',
          background: '#faf8f5'
        },
        'ocean-breeze': {
          primary: '#006994',
          secondary: '#4682b4',
          accent: '#20b2aa',
          background: '#f0f8ff'
        },
        'sunset-vibes': {
          primary: '#8b3a3a',
          secondary: '#cd853f',
          accent: '#ff4500',
          background: '#fff5ee'
        },
        'forest-green': {
          primary: '#228b22',
          secondary: '#556b2f',
          accent: '#32cd32',
          background: '#f0fff0'
        },
        'royal-purple': {
          primary: '#663399',
          secondary: '#9370db',
          accent: '#da70d6',
          background: '#faf8ff'
        },
        'neon-dark': {
          primary: '#00ff41',
          secondary: '#333333',
          accent: '#ff0080',
          background: '#0a0a0a'
        }
      };

      // Apply colors to swatches
      Object.keys(schemes).forEach(schemeName => {
        const preview = this.querySelector(`[data-scheme-preview="${schemeName}"]`);
        if (preview) {
          const colors = schemes[schemeName];
          preview.querySelector('.color-primary').style.backgroundColor = colors.primary;
          preview.querySelector('.color-secondary').style.backgroundColor = colors.secondary;
          preview.querySelector('.color-accent').style.backgroundColor = colors.accent;
          preview.querySelector('.color-background').style.backgroundColor = colors.background;
        }
      });
    }

    scrollToSection(section) {
      const element = this.querySelector(`[data-demo-section="${section}"]`);

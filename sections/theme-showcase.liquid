{% stylesheet %}
  .theme-showcase-section {
    min-height: 100vh;
    transition: all var(--transition-base);
  }

  /* Color scheme variables */
  .theme-showcase-section[data-color-scheme="ocean-breeze"] {
    --demo-bg: #f0f8ff;
    --demo-fg: #1e3a5f;
    --demo-primary: #006994;
    --demo-secondary: #4682b4;
    --demo-accent: #20b2aa;
    --demo-border: #b0d4e8;
  }

  .theme-showcase-section[data-color-scheme="sunset-vibes"] {
    --demo-bg: #fff5ee;
    --demo-fg: #2f1b14;
    --demo-primary: #8b3a3a;
    --demo-secondary: #cd853f;
    --demo-accent: #ff4500;
    --demo-border: #f4a460;
  }

  .theme-showcase-section[data-color-scheme="neon-dark"] {
    --demo-bg: #0a0a0a;
    --demo-fg: #ffffff;
    --demo-primary: #00ff41;
    --demo-secondary: #333333;
    --demo-accent: #ff0080;
    --demo-border: #333333;
  }

  .showcase-container {
    background-color: var(--demo-bg, var(--color-background));
    color: var(--demo-fg, var(--color-foreground));
    min-height: 100vh;
    transition: all var(--transition-base);
  }

  .showcase-section {
    padding: var(--space-2xl) var(--mobile-padding);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  /* Hero Section */
  .showcase-hero {
    padding: var(--space-3xl) var(--mobile-padding);
    text-align: center;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    align-items: center;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    font-family: var(--font-family-heading);
    margin-bottom: var(--space-sm);
    color: var(--demo-primary, var(--color-primary));
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    color: var(--demo-secondary, var(--color-text-secondary));
    margin-bottom: var(--space-lg);
    line-height: 1.4;
  }

  .hero-features {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    flex-wrap: wrap;
  }

  .feature-badge {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background-color: var(--demo-accent, var(--color-accent));
    color: white;
    border-radius: var(--border-radius-lg);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
  }

  .hero-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, var(--demo-primary, var(--color-primary)), var(--demo-accent, var(--color-accent)));
    border-radius: 50%;
    color: white;
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    font-family: var(--font-family-heading);
    margin-bottom: var(--space-sm);
    color: var(--demo-primary, var(--color-primary));
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--demo-secondary, var(--color-text-secondary));
    max-width: 600px;
    margin: 0 auto;
  }

  /* Color Schemes Grid */
  .color-schemes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .color-scheme-card {
    background-color: var(--demo-bg, var(--color-background));
    border: 1px solid var(--demo-border, var(--color-border));
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
    text-align: center;
    transition: transform var(--transition-fast);
  }

  .color-scheme-card:hover {
    transform: translateY(-4px);
  }

  .scheme-preview {
    margin-bottom: var(--space-md);
  }

  .scheme-colors {
    display: flex;
    justify-content: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .color-swatch {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 2px solid var(--demo-border, var(--color-border));
  }

  /* Font Pairings Grid */
  .font-pairings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .font-pairing-card {
    background-color: var(--demo-bg, var(--color-background));
    border: 1px solid var(--demo-border, var(--color-border));
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
    transition: transform var(--transition-fast);
  }

  .font-pairing-card:hover {
    transform: translateY(-4px);
  }

  .font-preview {
    margin-bottom: var(--space-md);
  }

  .font-heading {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-sm);
    color: var(--demo-primary, var(--color-primary));
  }

  .font-body {
    font-size: var(--font-size-base);
    color: var(--demo-fg, var(--color-foreground));
    line-height: 1.4;
  }

  /* Conversion Tools Grid */
  .conversion-tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .tool-demo {
    background-color: var(--demo-bg, var(--color-background));
    border: 1px solid var(--demo-border, var(--color-border));
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
    text-align: center;
  }

  .demo-header h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-xs);
    color: var(--demo-primary, var(--color-primary));
  }

  .demo-header p {
    font-size: var(--font-size-sm);
    color: var(--demo-secondary, var(--color-text-secondary));
    margin-bottom: var(--space-md);
  }

  .preview-phone {

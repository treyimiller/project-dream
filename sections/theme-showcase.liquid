  }

  .feature-card:hover {
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }

  .feature-card h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-sm);
    color: var(--demo-primary, var(--color-primary));
  }

  .feature-card p {

{% comment %}
  Template Info Section
  Provides information about available homepage templates
{% endcomment %}

<div class="template-info" style="display: none;">
  {% comment %} This section only appears in the theme customizer sidebar {% endcomment %}
  <div class="template-info__content">
    <h3>{{ section.settings.title | default: 'Homepage Templates' }}</h3>
    
    {% if section.settings.show_template_guide %}
      <div class="template-guide">
        <p><strong>Available Templates:</strong></p>
        
        <div class="template-list">
          <div class="template-item">
            <h4>ðŸŽ¨ Theme Showcase (Default)</h4>
            <p>Interactive demo of all theme features</p>
            <small>File: index.json</small>
          </div>
          
          <div class="template-item">
            <h4>ðŸŽ¯ Single Product Focus</h4>
            <p>Perfect for dropshipping one hero product</p>
            <small>File: index.single-product.json</small>
          </div>
          
          <div class="template-item">
            <h4>ðŸ›’ Multi Product Collections</h4>
            <p>Showcase multiple product categories</p>
            <small>File: index.multi-product.json</small>
          </div>
        </div>
        
        <div class="template-instructions">
          <p><strong>How to switch:</strong></p>
          <ol>
            <li>Use the template dropdown in the customizer toolbar above</li>
            <li>Select your desired homepage template</li>
            <li>Customize sections for that template</li>
            <li>Publish changes</li>
          </ol>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Template Info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Template Information"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Homepage Templates"
    },
    {
      "type": "checkbox",
      "id": "show_template_guide",
      "label": "Show template guide",
      "default": true
    },
    {
      "type": "paragraph",
      "content": "This section provides information about available homepage templates. Use the template selector in the customizer toolbar to switch between templates."
    }
  ],
  "presets": [
    {
      "name": "Template Info"
    }
  ]
}
{% endschema %}
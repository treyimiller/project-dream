{% comment %}
  Template Selector for Project-Dream theme
  Manages homepage template selection and settings
{% endcomment %}

<div class="template-selector-admin" style="display: none;">
  {% comment %} This section is for admin/customizer use only {% endcomment %}
  
  <div class="template-info">
    <h3>{{ section.settings.section_title | default: 'Homepage Template Settings' }}</h3>
    
    {% if section.settings.show_template_info %}
      <div class="current-template-info">
        <p><strong>Current Template:</strong> {{ section.settings.current_template | default: 'Theme Showcase' }}</p>
        
        <div class="template-descriptions">
          <div class="template-desc">
            <h4>ðŸŽ¨ Theme Showcase (Default)</h4>
            <p>Interactive demo showcasing all theme features, color schemes, and typography options. Perfect for demonstrating theme capabilities.</p>
            <code>File: index.json</code>
          </div>
          
          <div class="template-desc">
            <h4>ðŸŽ¯ Single Product Focus</h4>
            <p>Optimized for dropshipping stores focusing on one hero product. Features conversion-focused sections like urgency timers and testimonials.</p>
            <code>File: index.single-product.json</code>
          </div>
          
          <div class="template-desc">
            <h4>ðŸ›’ Multi Product Collections</h4>
            <p>Perfect for stores with multiple product categories. Includes slideshow, featured collections, and brand storytelling sections.</p>
            <code>File: index.multi-product.json</code>
          </div>
        </div>
      </div>
    {% endif %}
    
    {% if section.settings.show_switching_guide %}
      <div class="switching-guide">
        <h4>How to Switch Templates:</h4>
        <ol>
          <li>Use the template dropdown in the top customizer bar</li>
          <li>Select from: index, index.single-product, or index.multi-product</li>
          <li>Customize sections specific to that template</li>
          <li>Save and publish changes</li>
        </ol>
        
        <div class="template-tips">
          <h5>ðŸ’¡ Template Tips:</h5>
          <ul>
            <li><strong>Single Product:</strong> Add urgency timer, testimonials, FAQ sections</li>
            <li><strong>Multi Product:</strong> Add featured collections, product grids, brand story</li>
            <li><strong>Theme Showcase:</strong> Demonstrates all available theme features</li>
          </ul>
        </div>
      </div>
    {% endif %}
    
    {% if section.settings.enable_quick_switch %}
      <div class="quick-switch-links">
        <h4>Quick Template Preview:</h4>
        <div class="template-links">
          <a href="/?preview_theme_id={{ theme.id }}" class="template-link template-link--current">
            <span class="template-icon">ðŸŽ¨</span>
            Theme Showcase
          </a>
          <a href="/?preview_theme_id={{ theme.id }}&view=single-product" target="_blank" class="template-link">
            <span class="template-icon">ðŸŽ¯</span>
            Single Product
          </a>
          <a href="/?preview_theme_id={{ theme.id }}&view=multi-product" target="_blank" class="template-link">
            <span class="template-icon">ðŸ›’</span>
            Multi Product
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .template-selector-admin {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 14px;
    line-height: 1.4;
  }

  .template-info h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 16px;
    color: #2c3e50;
  }

  .current-template-info {
    background: #f8f9fa;
    border-radius: 6px;
    padding: 16px;
    margin-bottom: 20px;
    border-left: 4px solid #007acc;
  }

  .current-template-info p {
    margin: 0 0 12px 0;
    font-weight: 500;
  }

  .template-descriptions {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .template-desc {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    padding: 12px;
  }

  .template-desc h4 {
    margin: 0 0 6px 0;
    font-size: 14px;
    font-weight: 600;
    color: #495057;
  }

  .template-desc p {
    margin: 0 0 8px 0;
    font-size: 13px;
    color: #6c757d;
    line-height: 1.3;
  }

  .template-desc code {
    background: #f1f3f4;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 12px;
    color: #d73a49;
    font-family: 'SFMono-Regular', Consolas, monospace;
  }

  .switching-guide {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 6px;
    padding: 16px;
    margin-bottom: 20px;
  }

  .switching-guide h4 {
    margin: 0 0 10px 0;
    font-size: 14px;
    font-weight: 600;
    color: #856404;
  }

  .switching-guide ol {
    margin: 0 0 16px 0;
    padding-left: 18px;
    font-size: 13px;
    color: #856404;
  }

  .switching-guide li {
    margin-bottom: 4px;
  }

  .template-tips {
    border-top: 1px solid #ffeaa7;
    padding-top: 12px;
  }

  .template-tips h5 {
    margin: 0 0 8px 0;
    font-size: 13px;
    font-weight: 600;
    color: #856404;
  }

  .template-tips ul {
    margin: 0;
    padding-left: 18px;
    font-size: 12px;
    color: #856404;
  }

  .template-tips li {
    margin-bottom: 4px;
  }

  .quick-switch-links {
    background: #d1ecf1;
    border: 1px solid #bee5eb;
    border-radius: 6px;
    padding: 16px;
  }

  .quick-switch-links h4 {
    margin: 0 0 12px 0;
    font-size: 14px;
    font-weight: 600;
    color: #0c5460;
  }

  .template-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .template-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background: white;
    border: 1px solid #bee5eb;
    border-radius: 4px;
    text-decoration: none;
    color: #0c5460;
    font-size: 13px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .template-link:hover {
    background: #f8f9fa;
    border-color: #007acc;
    color: #007acc;
  }

  .template-link--current {
    background: #007acc;
    border-color: #007acc;
    color: white;
  }

  .template-icon {
    font-size: 16px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Template Selector",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Template Management"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Homepage Template Settings"
    },
    {
      "type": "select",
      "id": "current_template",
      "label": "Current template reference",
      "options": [
        {
          "value": "default",
          "label": "Theme Showcase (Default)"
        },
        {
          "value": "single-product",
          "label": "Single Product Focus"
        },
        {
          "value": "multi-product",
          "label": "Multi Product Collections"
        }
      ],
      "default": "default",
      "info": "This is for reference only. Use the template selector in the customizer toolbar to actually switch templates."
    },
    {
      "type": "checkbox",
      "id": "show_template_info",
      "label": "Show template descriptions",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_switching_guide",
      "label": "Show template switching guide",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_switch",
      "label": "Enable quick preview links",
      "default": true
    },
    {
      "type": "header",
      "content": "Template Customization"
    },
    {
      "type": "paragraph",
      "content": "Each template has its own set of sections that can be customized independently. Switch to a template using the dropdown above to customize its specific sections."
    }
  ],
  "presets": [
    {
      "name": "Template Selector"
    }
  ]
}
{% endschema %}
{% stylesheet %}
  .footer {
    background-color: var(--color-background-secondary, #f8f9fa);
    color: var(--color-foreground);
    margin-top: var(--space-3xl);
    border-top: 1px solid var(--color-border);
  }

  .footer-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: var(--space-2xl) var(--mobile-padding);
  }

  /* Newsletter Section */
  .footer-newsletter {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    color: white;
    padding: var(--space-xl);
    border-radius: var(--border-radius-lg);
    margin-bottom: var(--space-2xl);
    text-align: center;
  }

  .newsletter-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-sm);
  }

  .newsletter-description {
    font-size: var(--font-size-base);
    margin-bottom: var(--space-lg);
    opacity: 0.9;
  }

  .newsletter-input-group {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
    gap: var(--space-sm);
  }

  .newsletter-input {
    flex: 1;
    padding: var(--space-md);
    border: none;
    border-radius: var(--border-radius);
    font-size: var(--font-size-base);
  }

  .newsletter-button {
    padding: var(--space-md) var(--space-lg);
    background-color: white;
    color: var(--color-primary);
    border: none;
    border-radius: var(--border-radius);
    font-weight: var(--font-weight-bold);
    cursor: pointer;
    white-space: nowrap;
    transition: all var(--transition-fast);
  }

  .newsletter-button:hover {
    background-color: var(--color-background);
    transform: translateY(-1px);
  }

  /* Main Footer Content */
  .footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .footer-section {
    text-align: center;
  }

  .footer-section-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-md);
    color: var(--color-primary);
  }

  /* Company Section */
  .footer-company {
    margin-bottom: var(--space-lg);
  }

  .footer-logo {
    margin-bottom: var(--space-md);
  }

  .footer-logo-image {
    max-height: 60px;
    width: auto;
  }

  .footer-company-name {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-md);
    color: var(--color-primary);
  }

  .footer-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    line-height: 1.5;
  }

  /* Social Links */
  .footer-social {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: var(--color-primary);
    color: white;
    border-radius: 50%;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background-color: var(--color-accent);
    transform: translateY(-2px);
  }

  /* Footer Menus */
  .footer-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-menu-item {
    margin-bottom: var(--space-sm);
  }

  .footer-menu-link {
    color: var(--color-foreground);
    text-decoration: none;
    font-size: var(--font-size-base);
    transition: color var(--transition-fast);
  }

  .footer-menu-link:hover {
    color: var(--color-primary);
  }

  .footer-menu-text {
    color: var(--color-text-secondary);
    font-size: var(--font-size-base);
  }

  /* Trust Section */
  .footer-trust-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-trust-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    font-size: var(--font-size-sm);
  }

  .trust-icon {
    font-size: var(--font-size-lg);
  }

  .trust-text {
    color: var(--color-text-secondary);
  }

  /* Payment & Trust Badges */
  .footer-payment-trust {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-xl);
  }

  .footer-payment {
    text-align: center;
  }

  .payment-title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-sm);
    color: var(--color-text-secondary);
  }

  .payment-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .payment-icon:hover {
    opacity: 1;
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer-copyright {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .footer-legal {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .footer-legal-link {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-legal-link:hover {
    color: var(--color-primary);
  }

  /* Mobile Newsletter Input */
  @media (max-width: 480px) {
    .newsletter-input-group {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .newsletter-button {
      width: 100%;
    }
  }

  /* Tablet and Desktop Styles */
  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      text-align: left;
    }

    .footer-company {
      margin-bottom: 0;
    }

    .footer-section {
      text-align: left;
    }

    .footer-social {
      justify-content: flex-start;
    }

    .footer-trust-item {
      justify-content: flex-start;
    }

    .footer-payment-trust {
      flex-direction: row;
      justify-content: space-between;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  @media (min-width: 1024px) {
    .footer-container {
      padding: var(--space-3xl) var(--page-margin);
    }

    .footer-main {
      gap: var(--space-2xl);
    }
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('.newsletter-form');
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const email = formData.get('contact[email]');
        const button = this.querySelector('.newsletter-button');
        const originalText = button.textContent;
        
        // Basic email validation
        if (!email || !email.includes('@')) {
          button.textContent = 'Invalid Email';
          button.style.backgroundColor = '#ff4545';
          setTimeout(() => {
            button.textContent = originalText;
            button.style.backgroundColor = '';
          }, 2000);
          return;
        }
        
        // Show loading state
        button.textContent = 'Subscribing...';
        button.disabled = true;
        
        // Submit form
        fetch('/contact', {
          method: 'POST',
          body: formData
        })
        .then(response => {
          if (response.ok) {
            button.textContent = 'Subscribed!';
            button.style.backgroundColor = '#28a745';
            this.reset();
            
            // Track conversion
            if (typeof gtag !== 'undefined') {
              gtag('event', 'newsletter_signup', {
                event_category: 'engagement',
                event_label: 'footer_newsletter'
              });
            }
          } else {
            throw new Error('Subscription failed');
          }
        })
        .catch(error => {
          console.error('Newsletter signup error:', error);
          button.textContent = 'Try Again';
          button.style.backgroundColor = '#ff4545';
        })
        .finally(() => {
          setTimeout(() => {
            button.textContent = originalText;
            button.style.backgroundColor = '';
            button.disabled = false;
          }, 3000);
        });
      });
    }
  });
{% endjavascript %}


{% comment %}
  Template Switcher Section for Project-Dream theme
  Allows switching between homepage templates directly in the customizer
{% endcomment %}

<div class="template-switcher" data-template-switcher>
  <div class="template-switcher__container">
    <div class="template-switcher__header">
      <h2 class="template-switcher__title">{{ section.settings.title | default: 'Choose Homepage Layout' }}</h2>
      {% if section.settings.description != blank %}
        <p class="template-switcher__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="template-switcher__options">
      <div class="template-option" data-template="default">
        <div class="template-option__preview">
          <svg width="80" height="60" viewBox="0 0 80 60" fill="none">
            <rect width="80" height="60" rx="4" fill="var(--color-background-secondary)" stroke="var(--color-border)"/>
            <rect x="10" y="8" width="60" height="12" rx="2" fill="var(--color-primary)"/>
            <rect x="10" y="24" width="25" height="8" rx="1" fill="var(--color-accent)"/>
            <rect x="45" y="24" width="25" height="8" rx="1" fill="var(--color-accent)"/>
            <rect x="10" y="36" width="60" height="4" rx="1" fill="var(--color-border)"/>
            <rect x="10" y="44" width="40" height="4" rx="1" fill="var(--color-border)"/>
          </svg>
        </div>
        <div class="template-option__content">
          <h3 class="template-option__name">{{ section.settings.showcase_title | default: 'Theme Showcase' }}</h3>
          <p class="template-option__description">{{ section.settings.showcase_description | default: 'Interactive demo showcasing all theme features and customization options' }}</p>
          <span class="template-option__file">index.json (Current)</span>
        </div>
        <a href="/?preview_theme_id={{ theme.id }}" class="template-option__button template-option__button--current">
          Current Template
        </a>
      </div>

      <div class="template-option" data-template="single-product">
        <div class="template-option__preview">
          <svg width="80" height="60" viewBox="0 0 80 60" fill="none">
            <rect width="80" height="60" rx="4" fill="var(--color-background-secondary)" stroke="var(--color-border)"/>
            <rect x="10" y="8" width="60" height="20" rx="2" fill="var(--color-primary)"/>
            <rect x="10" y="32" width="15" height="15" rx="2" fill="var(--color-accent)"/>
            <rect x="28" y="32" width="42" height="6" rx="1" fill="var(--color-border)"/>
            <rect x="28" y="41" width="25" height="6" rx="1" fill="var(--color-border)"/>
          </svg>
        </div>
        <div class="template-option__content">
          <h3 class="template-option__name">{{ section.settings.single_title | default: 'Single Product Focus' }}</h3>
          <p class="template-option__description">{{ section.settings.single_description | default: 'Perfect for dropshipping stores focusing on one hero product with conversion-optimized sections' }}</p>
          <span class="template-option__file">index.single-product.json</span>
        </div>
        <a href="/?preview_theme_id={{ theme.id }}&view=single-product" class="template-option__button" target="_blank">
          Preview Template
        </a>
      </div>

      <div class="template-option" data-template="multi-product">
        <div class="template-option__preview">
          <svg width="80" height="60" viewBox="0 0 80 60" fill="none">
            <rect width="80" height="60" rx="4" fill="var(--color-background-secondary)" stroke="var(--color-border)"/>
            <rect x="10" y="8" width="60" height="12" rx="2" fill="var(--color-primary)"/>
            <rect x="10" y="24" width="18" height="12" rx="2" fill="var(--color-accent)"/>
            <rect x="31" y="24" width="18" height="12" rx="2" fill="var(--color-accent)"/>
            <rect x="52" y="24" width="18" height="12" rx="2" fill="var(--color-accent)"/>
            <rect x="10" y="40" width="60" height="4" rx="1" fill="var(--color-border)"/>
          </svg>
        </div>
        <div class="template-option__content">
          <h3 class="template-option__name">{{ section.settings.multi_title | default: 'Multi Product Collections' }}</h3>
          <p class="template-option__description">{{ section.settings.multi_description | default: 'Ideal for stores with multiple product categories featuring collection showcases and variety' }}</p>
          <span class="template-option__file">index.multi-product.json</span>
        </div>
        <a href="/?preview_theme_id={{ theme.id }}&view=multi-product" class="template-option__button" target="_blank">
          Preview Template
        </a>
      </div>
    </div>

    {% if section.settings.show_instructions %}
      <div class="template-switcher__instructions">
        <h4>How to Switch Templates:</h4>
        <ol>
          <li>Click "Preview Template" to see the layout</li>
          <li>If you like it, use the template selector in the top bar</li>
          <li>Choose the template file name (e.g., index.single-product)</li>
          <li>Customize the sections for that template</li>
          <li>Save and publish your changes</li>
        </ol>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .template-switcher {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-xl);
    margin: var(--space-xl) 0;
  }

  .template-switcher__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .template-switcher__header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .template-switcher__title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .template-switcher__description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.5;
  }

  .template-switcher__options {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .template-option {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background-color: var(--color-background-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-fast);
  }

  .template-option:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .template-option__preview {
    flex-shrink: 0;
  }

  .template-option__content {
    flex: 1;
  }

  .template-option__name {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-xs);
  }

  .template-option__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
    line-height: 1.4;
  }

  .template-option__file {
    display: inline-block;
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    background-color: var(--color-background);
    padding: 4px 8px;
    border-radius: var(--border-radius);
    font-family: monospace;
  }

  .template-option__button {
    flex-shrink: 0;
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--border-radius);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  .template-option__button:hover {
    background-color: var(--color-accent);
    transform: translateY(-1px);
  }

  .template-option__button--current {
    background-color: var(--color-success);
  }

  .template-switcher__instructions {
    background-color: var(--color-background-secondary);
    border-radius: var(--border-radius);
    padding: var(--space-lg);
    border-left: 4px solid var(--color-accent);
  }

  .template-switcher__instructions h4 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .template-switcher__instructions ol {
    margin: 0;
    padding-left: var(--space-md);
    color: var(--color-text-secondary);
  }

  .template-switcher__instructions li {
    margin-bottom: var(--space-xs);
    line-height: 1.4;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .template-option {
      flex-direction: column;
      text-align: center;
      gap: var(--space-md);
    }

    .template-option__preview {
      order: -1;
    }

    .template-option__button {
      width: 100%;
      max-width: 200px;
    }

    .template-switcher__options {
      gap: var(--space-md);
    }
  }

  @media (min-width: 1024px) {
    .template-switcher__options {
      grid-template-columns: repeat(3, 1fr);
    }

    .template-option {
      flex-direction: column;
      text-align: center;
      min-height: 300px;
    }

    .template-option__preview {
      margin-bottom: var(--space-md);
    }
  }
{% endstylesheet %}


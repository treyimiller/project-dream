<div class="hero hero--{{ section.settings.height }}{% if section.settings.full_width %} hero--full-width{% endif %}">
  <div class="hero__media-container">
    {%- if section.settings.video_url != blank -%}
      <!-- Video Background -->
      <video
        class="hero__video"
        autoplay
        muted
        loop
        playsinline
        poster="{{ section.settings.image | img_url: '1920x' }}"
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.image != blank -%}
      <!-- Image Background -->
      <img
        class="hero__image"
        src="{{ section.settings.image | img_url: '1920x' }}"
        srcset="{{ section.settings.image | img_url: '375x' }} 375w,
                {{ section.settings.image | img_url: '750x' }} 750w,
                {{ section.settings.image | img_url: '1125x' }} 1125w,
                {{ section.settings.image | img_url: '1500x' }} 1500w,
                {{ section.settings.image | img_url: '1920x' }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | escape }}"
        loading="eager"
      >
    {%- else -%}
      <!-- Placeholder -->
      <div class="hero__placeholder"></div>
    {%- endif -%}
    
    <!-- Overlay -->
    {%- if section.settings.overlay_opacity > 0 -%}
      <div class="hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
    {%- endif -%}
  </div>

  <div class="hero__content-wrapper">
    <div class="hero__content hero__content--{{ section.settings.text_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero__heading animate-fadeIn">
          {{ section.settings.heading | escape }}
        </h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="hero__subheading animate-fadeIn" style="animation-delay: 0.2s">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <div class="hero__buttons animate-fadeIn" style="animation-delay: 0.4s">
          <a href="{{ section.settings.button_link }}" class="button button--primary button--large">
            {{ section.settings.button_label | escape }}
          </a>
          
          {%- if section.settings.button_label_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="button button--secondary button--large">
              {{ section.settings.button_label_2 | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero__scroll-indicator">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M12 5v14M5 12l7 7 7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  {%- endif -%}
</div>


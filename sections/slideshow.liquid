{% stylesheet %}
.slideshow {
  position: relative;
  overflow: hidden;
  background-color: var(--color-media-bg);
}

/* Height variants */
.slideshow--small {
  height: 300px;
}

.slideshow--medium {
  height: 400px;
}

.slideshow--large {
  height: 500px;
}

@media (min-width: 768px) {
  .slideshow--small {
    height: 400px;
  }
  
  .slideshow--medium {
    height: 500px;
  }
  
  .slideshow--large {
    height: 600px;
  }
}

.slideshow__wrapper {
  height: 100%;
  position: relative;
}

.slideshow__slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.slideshow__slide--active {
  opacity: 1;
}

.slideshow__media {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.slideshow__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slideshow__placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
}

.slideshow__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
}

.slideshow__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #ffffff;
  padding: 2rem;
  max-width: 600px;
  width: 90%;
}

.slideshow__content--left {
  left: var(--page-margin);
  transform: translateY(-50%);
  text-align: left;
}

.slideshow__content--right {
  left: auto;
  right: var(--page-margin);
  transform: translateY(-50%);
  text-align: right;
}

.slideshow__heading {
  font-size: clamp(1.75rem, 5vw, 3rem);
  margin: 0 0 1rem;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.slideshow__text {
  font-size: clamp(1rem, 2.5vw, 1.25rem);
  margin: 0 0 1.5rem;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* Navigation */
.slideshow__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 50%;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  z-index: 2;
}

.slideshow__nav:hover {
  background-color: #ffffff;
  box-shadow: var(--shadow-md);
}

.slideshow__nav--prev {
  left: 1rem;
}

.slideshow__nav--next {
  right: 1rem;
}

.slideshow__dots {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.5rem;
  z-index: 2;
}

.slideshow__dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: 2px solid #ffffff;
  background-color: transparent;
  cursor: pointer;
  transition: background-color 0.2s ease;
  padding: 0;
}

.slideshow__dot--active {
  background-color: #ffffff;
}

@media (min-width: 768px) {
  .slideshow__nav {
    width: 56px;
    height: 56px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const slideshows = document.querySelectorAll('[data-slideshow]');
  
  slideshows.forEach((slideshow) => {
    const slides = slideshow.querySelectorAll('.slideshow__slide');
    const prevBtn = slideshow.querySelector('.slideshow__nav--prev');
    const nextBtn = slideshow.querySelector('.slideshow__nav--next');
    const dots = slideshow.querySelectorAll('.slideshow__dot');
    const autoplay = {{ section.settings.autoplay | json }};
    const autoplaySpeed = {{ section.settings.autoplay_speed | default: 5 }} * 1000;
    
    if (slides.length <= 1) return;
    
    let currentIndex = 0;
    let autoplayInterval;
    
    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('slideshow__slide--active', i === index);
      });
      
      dots.forEach((dot, i) => {
        dot.classList.toggle('slideshow__dot--active', i === index);
      });
    }
    
    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }
    
    function prevSlide() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(currentIndex);
    }
    
    function startAutoplay() {
      if (autoplay && !autoplayInterval) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }
    
    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }
    
    prevBtn?.addEventListener('click', () => {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    });
    
    nextBtn?.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    });
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentIndex = index;
        showSlide(currentIndex);
        stopAutoplay();
        startAutoplay();
      });
    });
    
    // Pause on hover
    slideshow.addEventListener('mouseenter', stopAutoplay);
    slideshow.addEventListener('mouseleave', startAutoplay);
    
    // Start autoplay
    startAutoplay();
  });
});
{% endjavascript %}